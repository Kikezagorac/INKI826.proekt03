     while (!isInputValid);

//naogjanje na najgolemata cifra
    const int max = najgolemaCifra(brojche);

//konvektiranje na dadeniot string zgolemuvajkji go sekoj karakter spored najgolemata cifra, vo sluchajov so brojot 8
    vector<char> textVector;
    for (char const& c :favvPart) {
